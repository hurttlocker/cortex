{
  "name": "phase2-low-signal-retrieval",
  "description": "Low-signal intent queries should not surface wrapper-heavy auto-capture noise in top ranks.",
  "noise_markers": [
    "(untrusted metadata)",
    "<cortex-memories>",
    "<relevant-memories>",
    "[queued messages while agent was busy]",
    "HEARTBEAT_OK",
    "Fire the test"
  ],
  "queries": [
    {
      "query": "Fire the test",
      "limit": 8,
      "max_noisy_top3": 0,
      "min_hits": 1
    },
    {
      "query": "HEARTBEAT_OK",
      "limit": 8,
      "max_noisy_top3": 1,
      "min_hits": 1
    },
    {
      "query": "run the test",
      "limit": 8,
      "max_noisy_top3": 0,
      "min_hits": 1
    },
    {
      "query": "Q prefers Sonnet for coding tasks",
      "limit": 8,
      "max_noisy_top3": 0,
      "min_hits": 1
    }
  ]
}
